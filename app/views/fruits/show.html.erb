

<script>
  var id = <%= @fruit.id %>
  console.log(id)

  $.getJSON("/fruits/" + id, function(data) {

    group = d3.select("body").append("svg").attr("width", 300).attr("height", 300).attr("class", "show-fruit fruit-<%= @fruit.id %>");
      group.append("text").text("<%= @fruit.name %>");

    $.each(data.parts, function(key, value) {
      this_fruit_part = value["identifier"];

      container = ".fruit-" + data.fruit.id
      window[this_fruit_part](container)
    });
  });

</script>
