<section>
  <div class="index-container">
   
    <h1 class="logo index-logo">FruitFace Generator</h1>

    <div class="stage">
      <ul>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
        <li></li>
      </ul>
      <div class="computer"></div>
      <div class="comp-screen"><i class="fa fa-code"></i></div>
      <div class="power"></div>
      <div class="comp-stand"><i class="fa fa-keyboard-o"></i><i class="fa fa-keyboard-o"></i><i class="fa fa-keyboard-o"></i></div>
      <div class="band"></div>
      <div class="dots"></div>
      <div class="band-stand"></div>
      <div class="shadow"></div>
    </div>

    <div class="arrow-wrapper">
      <div href="#" class="arrow arrow-bottom">Scroll Down</div> 
